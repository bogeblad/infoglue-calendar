<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">
<validators>
    <field name="name">
        <field-validator type="igrequiredstring">
            <message>You must enter a name.</message>
        </field-validator>
    </field>
    <field name="description">
        <field-validator type="igrequiredstring">
            <message>You must enter a description.</message>
        </field-validator>
    </field>
    <field name="locationId">
        <field-validator type="igrequiredoption">
            <message>You must choose at least one location.</message>
        </field-validator>
    </field>
    <field name="categoryId">
        <field-validator type="igrequiredoption">
            <message>You must choose at least one category.</message>
        </field-validator>
    </field>
    <field name="startDateTime">
		<field-validator type="fieldexpression">
            <param name="expression">startCalendar.before(endCalendar)</param>
            <message>Startdate must be before end date</message>
        </field-validator>
    </field>
</validators>